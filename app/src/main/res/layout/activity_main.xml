<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_kisi"
            android:layout_alignParentTop="true"
            android:layout_marginTop="53dp"
            android:layout_centerHorizontal="true"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:src="@drawable/profilpic"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/grey"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Sap_Org_Aciklama"
            android:layout_alignBottom="@+id/profile_image_kisi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_toLeftOf="@+id/profile_image_kisi"
            android:layout_toStartOf="@+id/profile_image_kisi"
            android:textSize="10sp" />

        <TextView
            android:text="TextView"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Ad_Soyad"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="435dp">
    </FrameLayout>

    <ImageView
        app:srcCompat="@drawable/altbar"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:contentDescription="" />
</LinearLayout>